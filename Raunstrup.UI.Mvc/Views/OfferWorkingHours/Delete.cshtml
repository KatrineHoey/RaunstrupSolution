@model Raunstrup.UI.MVC.Models.OfferWorkingHours

<h3>Er du sikker på du vil slette dette?</h3>
<section>
    <h4>Timer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tilbuds-ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfferRefId)
        </dd>
        <dt class = "col-sm-2">
            Medarbejder-ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeRefId)
        </dd>
        <dt class = "col-sm-2">
            Dato for arbejdet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfWorking)
        </dd>
        <dt class = "col-sm-2">
            Antal timer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Timeløn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HourlyPrice)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Rowversion" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til listen</a>
    </form>
</section>
