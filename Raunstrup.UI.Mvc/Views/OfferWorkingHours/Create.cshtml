@model Raunstrup.UI.MVC.Models.OfferWorkingHours

<h4>Inberet timer</h4>
<hr />
<section class="row">
    <article class="col-md-4">
        <form asp-action="Create">
            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
            <section class="form-group">
                <label asp-for="OfferRefId" class="control-label">Tilbuds-ID</label>
                <input asp-for="OfferRefId" class="form-control" readonly/>
                <span asp-validation-for="OfferRefId" class="text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="EmployeeRefId" class="control-label">Medarbejdernummer</label>
                <input asp-for="EmployeeRefId" class="form-control" readonly/>
                <span asp-validation-for="EmployeeRefId" class="text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="DateOfWorking" class="control-label">Dato for arbejdet</label>
                <input type="date" asp-for="DateOfWorking" class="form-control" />
                <span asp-validation-for="DateOfWorking" class="text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="Amount" class="control-label">Antal timer</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </section>
            <section class="form-group">
                <input type="submit" value="Tilføj" class="btn btn-primary" />
            </section>
        </form>
    </article>
</section>

<section>
    <a asp-action="Index">Tilbage til listen</a>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
