@model IEnumerable<Raunstrup.UI.MVC.Models.OfferDriving>
@{
    ViewData["Title"] = "Index";
}
  
<h1>Kørseler på tilbud</h1>
<p>
    <a asp-action="BackToOffer"> Tilbage til tilbuddet</a>
</p>
<p>
    <a asp-action="Create">Tilføj ny</a>
</p>
<p class="text-danger">@TempData["OfferDrivingCantBeFound"]</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeRefId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodaysDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeRefId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TodaysDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Slet</a>

                </td>
            </tr>
        }

        <tr class="mt-3">
            <td colspan="3">
                <b>Total:</b>
            <td>
                @Model.Sum(c => c.Amount * Convert.ToDecimal(c.Price))
            </td>
        </tr>
    </tbody>
</table>