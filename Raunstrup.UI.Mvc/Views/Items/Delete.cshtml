@model Raunstrup.UI.MVC.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1>Slet</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Er du sikker på du vil slette dette?</h3>
<section>
    <h4>Materiale</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchasePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MeasuringUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MeasuringUnit)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til listen</a>
    </form>
</section>
